        {
          "id": "Energy Save Heat",
          "label": {
            "en": "Auto",
            "nl": "Auto"
          }
        },
        {
          "id": "Off",
          "label": {
            "en": "Off",
            "nl": "Uit"
          }
        },
        {
          "id": "AWAY",
          "label": {
            "en": "Away",
            "nl": "Afwezig"
          }
        }
      ]
    }
  ]
